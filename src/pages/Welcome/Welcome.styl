@import '../../module/basic.styl'

.welcome-container
  sizer(100%, 100vh)
  flexer(c, c, rn)

.welcome
  sizer(80%, 70%)
  display: flex
  justify-content: space-between

.welcome-left-part
  fonter(400, 1.125rem, 1.5)
  width 60%
  display: flex
  justify-content: center
  flex-direction: column
  row-gap: 3.125vh

.welcome-btn
  fonter(600, 1.125rem, 1.5)
  paddinger(16px, 32px, 16px, 32px) 
  color white
  width fit-content
  background: black
  border: 2px solid black
  border-radius: 3.61vw
  cursor pointer
  transition: .5s
  display: flex
  &:hover
    opacity .8
    paddinger(16px, 40px, 16px, 20px)

    +.icon-container
      opacity: 1
      transform: translateX(15%)

.icon-container
  position absolute
  left: 20%
  transform: translateX(-20%)
  top: 1%  
  opacity 0
  display: flex
  justify-content: center
  align-items: center
  width fit-content
  height: 100%
  transition: .5s


.btn-container
  position relative


.welcome-title
  fonter(700, 2.5rem, 1.2)
  width 60%
  text-transform: uppercase

.welcome-info
  width 60%

.welcome-right-part
  width 40%

.welcome-image
  sizer(100%, auto)
  border-radius: 1.38vw
