@import '../../module/basic.styl'

.orders-container
  sizer(100%, 100vh)
  flexer(c, c, rn)

.orders
  sizer(70%, 80%)
  display: flex
  align-items: start
  justify-content: center
  overflow-y: scroll

.all-orders
  width 80%
  display: grid
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr
  grid-template-rows: 1fr 1fr
  column-gap: 2vw
  span 
    display: block

.order
  width 80%
  display: flex
  flex-direction: column
  

.delete-btn, .edit-btn
  align-self: center

.control-panel
  text-align: center
  grid-column: 5/-1 

.any-orders-text
  text-align: center
  grid-column: 1/-1